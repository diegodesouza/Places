.list__item--form
  .form-wrapper
    %h2 Edit #{resource_name.to_s.humanize}

    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      .element-wrapper
        = f.email_field :email, autofocus: true
        %span.bar
        %label Email
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .element-wrapper
        %i (leave blank if you don't want to change it)
        %br/
        = f.password_field :password, autocomplete: "off"
        %span.bar
        %label Password
      .element-wrapper
        = f.password_field :password_confirmation, autocomplete: "off"
        %span.bar
        %label Password Confirmation
      .element-wrapper
        %i (we need your current password to confirm your changes)
        %br/
      .element-wrapper
        = f.password_field :current_password, autocomplete: "off"
        %span.bar
        %label Current Password

      .form-wrapper--with-button
        = f.button "UPDATE"

      .form-wrapper--with-button__right
        = link_to "BACK", :back


      .button__cancel-account
        %p Unhappy?
        #{link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"this-thing"}

