<%= form_for [@listing, @reservation] do |f| %>
  <%= f.label :check_in, "Check In" %>
  <%= f.date_field :check_in,
                    discard_time: true,
                    placeholder: "Check In",
                    :order => [:month, :day, :year],
                    min: Time.zone.today %>

  <%= f.label :check_out, "Check Out" %>
  <%= f.date_field :check_out,
                    discard_time: true,
                    placeholder: "Check Out",
                    :order => [:month, :day, :year],
                    min: Time.zone.today %>

  <%= f.submit "Submit", method: :post %>
<% end %>
