<% if current_user != @listing.user %>

<% if @review.errors.any? %>
  <%  @review.errors.full_messages.each do |msg| %>
    <li>  <%= msg %>  </li>
  <% end %>
<% end %>

<%= form_for [@listing, @review] do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit "Submit Review", method: :post %>
  </div>
  <% end %>
<% end %>
