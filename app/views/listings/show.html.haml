= render "shared/error_messages", object: @listing
%section
  .title
    %h1= @listing.title
.carousel-show-page
  %div= image_tag @listing.place_photo.url
  %div= image_tag @listing.image_one.url
  %div= image_tag @listing.image_two.url
  %div= image_tag @listing.image_three.url
  %div= image_tag @listing.image_four.url
%section
  .block.block-show
    %p
      Description: #{@listing.description}
      %br/
      Property Type: #{@listing.property_type}
      %br/
      Number of Bedrooms: #{@listing.number_bedroom}
      %br/
      Accommodates: #{@listing.number_accommodate}
      %br/
    %hr/
    %h3 Address
    %p
      Street: #{@listing.street}
      %br/
      City: #{@listing.city}
      %br/
      State: #{@listing.state}
      %br/
      Zipcode: #{@listing.zipcode}
      %br/
      Country: #{@listing.country}
      %br/
    %hr/
    - if current_user == @listing.user
      = link_to "Edit Listing", edit_listing_path(@listing), class:"this-thing"
      = link_to "Delete Listing", listing_path(@listing), class:"this-thing", method: :delete, |
        data: { confirm: "Are you sure?" }                                                     |
      %br/
      %hr/
